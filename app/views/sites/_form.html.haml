.contro-group
  = form.label :name, 'Name:'
  .controls
    = form.text_field :name
.contro-group
  = form.label :subdomain, 'Sub Dominio'
  .controls
    = form.text_field :subdomain

.contro-group
  = form.label :custom_layout, 'Custom Layout?'
  .controls
    = form.check_box :custom_layout

.contro-group
  Assets:
  = form.fields_for :assets do |asset|
    = render 'asset', {form: asset}

= form.link_to_add 'Agregar Asset', :assets
.contro-group
  = form.label :custom_layout_content, 'Dynamic Layout:'
  .controls
    = form.text_area :custom_layout_content, rows: '20', class: 'span10'
